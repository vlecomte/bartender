<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/elem_product_name"
        android:layout_weight="1"
        style="@style/TableCell" />
    <TextView
        android:id="@+id/elem_number"
        android:layout_width="@dimen/col_width_number_short"
        android:gravity="end"
        style="@style/TableCell" />
    <TextView
        android:id="@+id/elem_price"
        android:layout_width="@dimen/col_width_price"
        android:gravity="end"
        style="@style/TableCell" />
</TableRow>