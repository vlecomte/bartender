<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="be.uclouvain.lsinf1225.v.bartender.DescriptionActivity">

    <ImageView
        android:id="@+id/imgDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="4"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description"
        android:id="@+id/tV_descr"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:layout_alignTop="@+id/imgDesc"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Descripion"
        android:layout_weight="5"
        android:layout_gravity="left"
        android:id="@+id/grdtextdescr"
        android:layout_marginBottom="93dp"
        android:layout_above="@+id/add_pro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/add_pro"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/remove_pro"
        android:layout_toEndOf="@+id/remove_pro" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/remove_pro"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/grdtextdescr"
        android:layout_toEndOf="@+id/grdtextdescr" />

</RelativeLayout>
