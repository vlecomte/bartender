<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height_large"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/elem_username_or_table"
            android:layout_weight="1"
            style="@style/TableCell" />
        <TextView
            android:id="@+id/elem_total"
            android:layout_width="@dimen/col_width_total"
            android:gravity="end"
            style="@style/TableCell" />
        <ImageButton
            android:id="@+id/button_open_bill"
            android:layout_width="@dimen/col_width_button"
            android:layout_height="@dimen/row_height_large"
            android:src="@drawable/ic_action_forward"
            android:contentDescription="@string/button_desc_open_bill"
            style="?android:attr/borderlessButtonStyle" />
    </TableRow>
    <include layout="@layout/rule_table_inter" />
</LinearLayout>